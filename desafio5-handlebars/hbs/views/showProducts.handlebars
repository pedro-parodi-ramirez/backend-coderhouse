    </form>
    {{#if isEmpty}}
        <p>No hay productos disponibles<p>
    {{/if}}
    <div class="row row-cols-1 row-cols-md-4 g-4">
        {{#each products}}
        <div class="col">
            <div class="card" style="width: 10rem;">
            <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
